@page "{id:long}"
@model Presentation.Areas.Administrator.Pages.ArticleManagement.EditeArticleModel
@{
}

<div class="card">
    <div class="card-header">
        <h2>Edit Article : @Model.editeArticle.Title</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="editeArticle.Id"/>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="editeArticle.Title" class="control-label">Title:</label>
                            <input asp-for="editeArticle.Title" class="form-control"/>
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="editeArticle.ShortDescription" class="control-label">ShortDescription:</label>
                            <textarea asp-for="editeArticle.ShortDescription" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="editeArticle.Image" class="control-label">Image:</label>
                            <input asp-for="editeArticle.Image" class="form-control"/>
                        </div>
                    </div>


                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="editeArticle.Content" class="control-label">Content:</label>
                            <textarea asp-for="editeArticle.Content" class="form-control" rows="5"></textarea>
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="editeArticle.ArticleCategoryId" class="control-label">Article Category:</label>
                            <select asp-for="editeArticle.ArticleCategoryId" asp-items="Model.ArticleCategories" class="form-control">
                                <option value="0">Select Article Category</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-warning"/>
                        <a class="btn btn-dark" asp-page="./ListAll" asp-area="Administrator">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>